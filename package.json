{
  "name": "pankow-ui",
  "type": "module",
  "private": true,
  "workspaces": [
    "website/",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/tailwindcss": "^3.0.9",
    "tailwindcss": "^3.0.23",
    "turbo": "*",
    "typescript": "~4.6.2"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
